<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme (Compose handles styling, this is minimal) -->
    <style name="Theme.Shalawat" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Splash screen theme using AndroidX SplashScreen API -->
    <style name="Theme.Shalawat.Splash" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">#FF006B63</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.Shalawat</item>
    </style>

</resources>
